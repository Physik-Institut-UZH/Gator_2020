 G4double box_z= 9*mm;
 G4Box* test3= new G4Box("test3",0.5*box_x,0.5*box_y,0.5*box_z);

//Construct the logical volume 
 G4LogicalVolume* test3_log = new G4LogicalVolume(test3,Teflon,"test3_log");

