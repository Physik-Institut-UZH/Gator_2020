// Set visibility properties for all the samples 
G4VisAttributes* sample_vis = new G4VisAttributes(red);
sample_vis -> SetVisibility(true); 
sample_vis -> SetForceSolid(false);

//---------- volume test4 ---------- 

//Dimensions of the sample in box and definition of the geometry
 G4double box_test4_x= 50*mm;
 G4double box_test4_y= 50*mm;
 G4double box_test4_z= 50*mm;
 G4Box* test4= new G4Box("test4",0.5*box_test4_x,0.5*box_test4_y,0.5*box_test4_z);

//Construct the logical volume 
 G4LogicalVolume* test4_log = new G4LogicalVolume(test4,Teflon,"test4_log");

// Set visibility for the sample (all are set to the same color, change it if necessary) 
test4_log -> SetVisAttributes(sample_vis);

// Set coordinates for the position of the sample at the top of the detector
G4double test4_Pos_x =0*mm;
G4double test4_Pos_y =0*mm;
G4double test4_Pos_z= endcapPos_z+0.5*endcapHeight1+0.5*box_test4_z+0.01*mm;

// Define the position vector 
G4ThreeVector test4_Pos(test4_Pos_x,test4_Pos_y,test4_Pos_z); 

// Define the physical volume 
G4VPhysicalVolume* test4_phys = new  G4PVPlacement(0,test4_Pos,test4_log,"test4_phys",cavity1_log,false,0,true);
